<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the box -->
    <solid android:color="#FFFFFF"/>

    <!-- Define the rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Outline or border color and width -->
    <stroke
        android:width="2dp"
        android:color="#000000"/> <!-- Red border -->

    <!-- Optional padding inside the box -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>

    <!-- Optional shadow or elevation (only works on higher versions of Android) -->
    <size
        android:width="0dp"
        android:height="0dp" />
</shape>
